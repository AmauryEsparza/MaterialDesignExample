    package="com.example.materialdesignexample" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".OtherActivity"/>
        <activity android:name=".activities.RepositoriesListActivity"/>
        <activity android:name=".ClipViewsActivity"/>
        <activity android:name=".RecyclerViewActivity"/>
        <activity android:name=".activities.RepositoriesActivity"/>
        <activity android:name=".activities.DetailsRepositoriesActivity"/>
        <activity android:name=".activities.RepositoryDetailsActivity"/>

    </application>

</manifest>
