<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/navigation_color</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/status_color</item>
        <!--   Navigation Bar color -->
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <!--   status bar text color -->
        <item name="android:textColorPrimary">@color/text_navigation_color</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_item_transform</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_item_transform</item>
    </style>
</resources>
